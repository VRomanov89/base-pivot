:root{
  --ink:#0B0F17;
  --slate:#4B5563;
  --surface:#FFFFFF;
  --surfaceMuted:#F7F8F6;
  --border:#E6E8EF;

  --accent:#0F766E;
  --accentHover:#115E59;

  --radius:12px;
  --container:1280px;
}

/* Utility */
.sr-only{
  position:absolute;
  width:1px;
  height:1px;
  padding:0;
  margin:-1px;
  overflow:hidden;
  clip:rect(0,0,0,0);
  white-space:nowrap;
  border:0;
}

.site-footer{
  background:var(--surface);
  border-top:1px solid var(--border);
}

.footer__inner{
  max-width:var(--container);
  margin:0 auto;
  padding:48px 20px;
  display:grid;
  grid-template-columns: 1.2fr 1fr 1fr 1.2fr;
  gap:28px;
}

.footer__logo{
